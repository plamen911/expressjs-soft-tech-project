<% include ../shared/header.ejs %>

<div class="col-md-4 col-md-offset-4">
    <div class="login-wrapper">
        <form action="/user/login" method="post">
            <div class="box">
                <div class="content-wrap">
                    <h6>Sign In</h6>
                    <input type="text" id="username" name="username" value="<%= typeof username != 'undefined' ? username : 'admin' %>" class="form-control" placeholder="Username">
                    <input type="password" id="password" name="password" value="password" class="form-control" placeholder="Password">
                    <small>Demo Username: <strong>admin</strong>, Demo Password: <strong>password</strong></small>
                    <div class="action">
                        <input type="submit" value="Login" class="btn btn-primary signup">
                    </div>
                </div>
            </div>
            <div class="already">
                <p>Don't have an account yet?</p>
                <a href="/user/register">Sign Up</a>
            </div>
        </form>
    </div>
</div>
<script>
    $(function () {
        $('#username').focus();
    });
</script>

